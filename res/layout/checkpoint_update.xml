<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background"
        android:gravity="top"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/title_background" >

            <TextView
                android:id="@+id/update_checkpoint_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/title"
                android:textColor="@color/font_color"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/updateCheckpointReturn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="@string/return_sy"
                android:textColor="@color/font_color"
                android:textSize="16sp"
                android:textStyle="bold" />


            <ImageView
        android:id="@+id/showUpdateCheckpointMenu"
         android:src="@drawable/menu"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/content_background"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dip" >

            <TextView
                android:id="@+id/catetoryTextView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="13dp"
                android:height="20dp"
                android:text="Category:"
                android:textSize="14sp" >
            </TextView>

            <Spinner
                android:id="@+id/categoryEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@+id/catetoryTextView"
                android:background="@drawable/login_screen_button"
                android:gravity="center"
                android:height="20dp"
                android:textColor="@color/login_text_color"
                android:textSize="12sp" />

            <!--
				<EditText android:id="@+id/categoryEditText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
				android:layout_marginTop="5dip"
				android:layout_toRightOf="@+id/catetoryTextView"
				android:background="@drawable/login_screen_button"
				android:gravity="center" android:height="20dp"
				android:inputType="text" android:text="android"
				android:textColor="@color/login_text_color" android:textSize="12sp"
				/>
            -->

            <TextView
                android:id="@+id/checkpointTextView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/catetoryTextView"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="18dp"
                android:height="20dp"
                android:text="Checkpoint:"
                android:textSize="14sp" >
            </TextView>

            <Spinner
                android:id="@+id/checkpointEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/categoryEditText"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="22dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@+id/checkpointTextView"
                android:background="@drawable/login_screen_button"
                android:gravity="center" />
            <!--
				<EditText android:id="@+id/checkpointEditText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/categoryEditText"
				android:layout_centerHorizontal="true"
				android:layout_marginLeft="22dip" android:layout_marginRight="20dip"
				android:layout_marginTop="5dip"
				android:layout_toRightOf="@+id/checkpointTextView"
				android:background="@drawable/login_screen_button"
				android:gravity="center" android:inputType="text"
				android:text="android" android:textColor="@color/login_text_color"
				android:textSize="12sp" />
            -->

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkpointTextView"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="18dip"
                android:height="20dp"
                android:text="Name"
                android:textSize="14sp" >
            </TextView>

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkpointEditText"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@+id/checkpointTextView"
                android:background="@drawable/login_screen_button"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:text="android"
                android:textColor="@color/login_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/detailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameTextView"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18dip"
                android:text="Detail:"
                android:textSize="14sp" >
            </TextView>

            <EditText
                android:id="@+id/detailEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailTextView"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/login_screen_button"
                android:gravity="center"
                android:inputType="text|textMultiLine|textEmailAddress"
                android:minLines="8"
                android:text="android"
                android:textColor="@color/login_text_color"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/checkpointPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailEditText"
                android:layout_centerInParent="true"
                android:layout_margin="10dip"
                android:src="@drawable/logo_asiaction" />

            <TextView
                android:id="@+id/selectPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkpointPhoto"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip"
                android:text="@string/select_photo"
                android:textSize="14sp" >
            </TextView>

            <TextView
                android:id="@+id/qcDefectTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/selectPhoto"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip"
                android:text="Quantity Defect:"
                android:textSize="14sp" >
            </TextView>

            <EditText
                android:id="@+id/qcDefectEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/selectPhoto"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@+id/qcDefectTextView"
                android:background="@drawable/login_screen_button"
                android:gravity="center"
                android:inputType="number"
                android:text="android"
                android:textColor="@color/login_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qcDefectEditText"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dip"
                android:text="Status"
                android:textSize="14sp" >
            </TextView>

            <LinearLayout
                android:id="@+id/statusLin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qcDefectEditText"
                android:layout_marginTop="15dip"
                android:layout_toRightOf="@+id/tvStatus"
                android:baselineAligned="false"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/acStatusEFailed"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Failed"
                    android:textSize="14sp" >
                </TextView>

                <TextView
                    android:id="@+id/tvStatusEAlert"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Alert"
                    android:textSize="14sp" >
                </TextView>

                <TextView
                    android:id="@+id/tvStatusEPassed"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Passed"
                    android:textSize="14sp" >
                </TextView>

                <TextView
                    android:id="@+id/tvStatusEReady"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Ready"
                    android:textSize="14sp" >
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/tvAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/statusLin"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dip"
                android:text="Action"
                android:textSize="14sp" >
            </TextView>

            <LinearLayout
                android:id="@+id/qcActionLin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/statusLin"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="15dip"
                android:layout_toRightOf="@+id/tvAction"
                android:baselineAligned="false"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/qcActionSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/login_screen_button"
                    android:gravity="center"
                    android:height="20dp"
                    android:textColor="@color/login_text_color"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/qcCommentTextView"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qcActionLin"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip"
                android:text="QC Comment"
                android:textSize="14sp" >
            </TextView>

            <EditText
                android:id="@+id/qcCommentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qcCommentTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/login_screen_button"
                android:gravity="center"
                android:inputType="textMultiLine|textEmailAddress"
                android:minLines="8"
                android:text="android"
                android:textColor="@color/login_text_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottom_tab_add_or_update_checkpoint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/add_project_background"
            android:gravity="center" >

            <TextView
                android:id="@+id/bottom_tab_add_or_update_checkpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/selected_tab"
                android:textSize="24dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>