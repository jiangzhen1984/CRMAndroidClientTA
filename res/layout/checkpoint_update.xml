<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:background="@color/splashscreen_background"
	android:orientation="vertical" android:gravity="top">

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:background="@drawable/login_screen_top1"
		android:gravity="center">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="@color/login_top_header"
			android:text="@string/title" android:textSize="24sp"
			android:textStyle="bold" android:id="@+id/your_card_header" />
	</LinearLayout>

	<RelativeLayout android:layout_width="match_parent"
		android:layout_height="0dp" android:gravity="top"
		android:layout_weight="1" android:paddingTop="10dip"
		android:orientation="vertical">

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView1"
			android:text="Category:" android:layout_marginLeft="20dip"
			android:layout_marginTop="8dip" android:textSize="19sp"></TextView>


		<EditText android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="40dip"
			android:layout_marginRight="20dip" android:layout_marginTop="5dip"
			android:textSize="12sp" android:textColor="@color/login_text_color"
			android:text="android" android:inputType="textEmailAddress"
			android:gravity="center" android:background="@drawable/login_screen_button"
			android:layout_toRightOf="@+id/textView1"
			android:layout_centerHorizontal="true" android:id="@+id/login_text" />

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView2"
			android:text="Checkpoint:" android:layout_marginTop="10dip"
			android:layout_marginLeft="20dip" android:textSize="19sp"
			android:layout_below="@+id/textView1"></TextView>



		<EditText android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="12sp"
			android:textColor="@color/login_text_color" android:text="android"
			android:inputType="textEmailAddress" android:gravity="center"
			android:background="@drawable/login_screen_button"
			android:layout_toRightOf="@+id/textView2" android:layout_below="@+id/login_text"
			android:layout_centerHorizontal="true" android:id="@+id/login_text2"
			android:layout_marginLeft="22dip" android:layout_marginRight="20dip"
			android:layout_marginTop="5dip" />






		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView3"
			android:text="Name" android:layout_marginTop="18dip"
			android:textSize="19sp" android:layout_marginLeft="20dip"
			android:layout_below="@+id/textView2"></TextView>



		<EditText android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="12sp"
			android:textColor="@color/login_text_color" android:text="android"
			android:inputType="textEmailAddress" android:gravity="center"
			android:background="@drawable/login_screen_button"
			android:layout_toRightOf="@+id/textView3" android:layout_below="@+id/login_text2"
			android:layout_centerHorizontal="true" android:id="@+id/login_text3"
			android:layout_marginLeft="70dip" android:layout_marginRight="20dip"
			android:layout_marginTop="5dip" />




		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView4"
			android:text="Detail:" android:layout_marginTop="18dip"
			android:textSize="19sp" android:layout_marginLeft="20dip"
			android:layout_below="@+id/textView3"></TextView>



		<EditText android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textSize="12sp"
			android:textColor="@color/login_text_color" android:text="android"
			android:gravity="center" android:background="@drawable/login_screen_button"
			android:id="@+id/login_text4" android:layout_below="@+id/textView4"

			android:minLines="6" android:inputType="text|textMultiLine|textEmailAddress"
			android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
			android:layout_marginTop="5dip" />

		<ImageView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:src="@drawable/app_icon"
			android:id="@+id/im" android:layout_below="@+id/login_text4"
			android:layout_margin="10dip" />





		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView5"
			android:text="Quantity Defect" android:textSize="19sp"
			android:layout_below="@+id/im" android:layout_marginLeft="20dip"
			android:layout_marginTop="10dip"></TextView>



		<EditText android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="12sp"
			android:textColor="@color/login_text_color" android:text="android"
			android:inputType="textEmailAddress" android:gravity="center"
			android:background="@drawable/login_screen_button"
			android:layout_toRightOf="@+id/textView5" android:layout_below="@+id/im"
			android:layout_centerHorizontal="true" android:id="@+id/login_text5"
			android:layout_marginLeft="20dip" android:layout_marginRight="30dip"
			android:layout_marginTop="5dip" />

		<LinearLayout android:layout_width="match_parent"
			android:layout_below="@+id/textView5" android:layout_height="wrap_content"
			android:orientation="horizontal" android:gravity="left"
			android:baselineAligned="false" android:id="@+id/actionLin" android:layout_marginTop="15dip">
			
			<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView6"
			android:text="Action" android:textSize="19sp"
			 android:layout_marginLeft="20dip"
			android:layout_marginTop="10dip"></TextView>
		</LinearLayout>
		
		
		<LinearLayout android:layout_width="match_parent"
			android:layout_below="@+id/actionLin" android:layout_height="wrap_content"
			android:orientation="horizontal" android:gravity="left"
			android:baselineAligned="false" android:id="@+id/actionLin1" android:layout_marginTop="15dip" android:layout_marginBottom="10dip">
			
			<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView7"
			android:text="QC Status" android:textSize="19sp"
			 android:layout_marginLeft="20dip"
			android:layout_marginTop="10dip"></TextView>
		</LinearLayout>



		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView8"
			android:text="QC Comment" android:textSize="19sp"
			android:layout_below="@+id/actionLin1" android:layout_marginLeft="20dip"
			android:layout_marginTop="10dip"></TextView>



		<EditText android:layout_height="wrap_content" android:textSize="12sp"
			android:textColor="@color/login_text_color" android:text="android"
			android:gravity="center"
			android:background="@drawable/login_screen_button"
			android:layout_toRightOf="@+id/textView9" android:layout_below="@+id/textView8"
			android:layout_centerHorizontal="true" android:id="@+id/login_text5"
			android:inputType="textMultiLine|textEmailAddress" android:minLines="6" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:layout_marginTop="5dip" android:layout_width="match_parent"/>


	</RelativeLayout>

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:gravity="left" android:baselineAligned="false">

	</LinearLayout>
</LinearLayout>

