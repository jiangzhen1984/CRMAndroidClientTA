<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background"
        android:gravity="top"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/title_background" >

            <TextView
                android:id="@+id/update_checkpoint_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/title"
                android:textColor="@color/font_color"
                android:textSize="20sp"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/updateCheckpointReturn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="@string/return_sy"
                    android:textColor="@color/font_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/content_background"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingTop="10dip" >

            <TextView
                android:id="@+id/catetoryTextView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="13dp"
                android:height="20dp"
                android:text="Category:"
                android:textSize="14sp" >

            </TextView>

            <EditText
                android:id="@+id/categoryEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@+id/catetoryTextView"
                android:background="@drawable/login_screen_button"
                android:gravity="center"
                android:height="20dp"
                android:inputType="text"
                android:text="android"
                android:textColor="@color/login_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/checkpointTextView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/catetoryTextView"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="18dp"
                android:height="20dp"
                android:text="Checkpoint:"
                android:textSize="14sp" >

            </TextView>

            <EditText
                android:id="@+id/checkpointEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/categoryEditText"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="22dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@+id/checkpointTextView"
                android:background="@drawable/login_screen_button"
                android:gravity="center"
                android:inputType="text"
                android:text="android"
                android:textColor="@color/login_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkpointTextView"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="18dip"
                android:height="20dp"
                android:text="Name"
                android:textSize="14sp" >

            </TextView>

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkpointEditText"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@+id/checkpointTextView"
                android:background="@drawable/login_screen_button"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:text="android"
                android:textColor="@color/login_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/detailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameTextView"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18dip"
                android:text="Detail:"
                android:textSize="14sp" >

            </TextView>

            <EditText
                android:id="@+id/detailEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailTextView"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/login_screen_button"
                android:gravity="center"
                android:inputType="text|textMultiLine|textEmailAddress"
                android:minLines="8"
                android:text="android"
                android:textColor="@color/login_text_color"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/checkpointPhoto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailEditText"
                android:src="@drawable/logo_asiaction"
                android:layout_margin="10dip" />

            <TextView
                android:id="@+id/qcDefectTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkpointPhoto"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip"
                android:text="Quantity Defect:"
                android:textSize="14sp" >
            </TextView>

            <EditText
                android:id="@+id/qcDefectEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkpointPhoto"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@+id/qcDefectTextView"
                android:background="@drawable/login_screen_button"
                android:gravity="center"
                android:inputType="number"
                android:text="android"
                android:textColor="@color/login_text_color"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/actionLin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qcDefectEditText"
                android:layout_marginTop="15dip"
                android:baselineAligned="false"
                android:gravity="left|center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dip"
                    android:text="Action"
                    android:textSize="14sp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/qcStatusLin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/actionLin"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="15dip"
                android:baselineAligned="false"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dip"
                    android:text="QC Status"
                    android:textSize="14sp" >
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/qcCommentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qcStatusLin"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip"
                android:text="QC Comment"
                android:textSize="14sp" >
            </TextView>

            <EditText
                android:id="@+id/qcCommentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qcCommentTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/login_screen_button"
                android:gravity="center"
                android:inputType="textMultiLine|textEmailAddress"
                android:minLines="8"
                android:text="android"
                android:textColor="@color/login_text_color"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottom_tab_add_or_update_checkpoint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/add_project_background"
            android:gravity="center" >

            <TextView
                android:id="@+id/bottom_tab_add_or_update_checkpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/selected_tab"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>