<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
    android:layout_height="fill_parent"
    
    android:background="@color/order_background"
    
    android:id="@+id/componentCheckpoint">
    
      <ImageView
        android:id="@+id/projectItemOrderPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"        
        android:layout_marginLeft="7dip" android:visibility="gone"/>
   
   
   
   <TextView
        android:id="@+id/itemOrderCategoryCheckType"
        android:layout_marginLeft="7dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/projectItemOrderPhoto"
        android:text="temOrderCategoryCheckType"
        android:textSize="10sp"
        android:textStyle="bold" />
   
   
   
    <TextView
        android:id="@+id/itemOrderDefectAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemOrderCategoryCheckType"
        android:layout_toRightOf="@+id/projectItemOrderPhoto"
        android:layout_marginLeft="7dip"
        android:text="mOrderDefectAlert"
        android:textSize="10sp"
        android:textStyle="bold" />
        
        
        
    <TextView
        android:id="@+id/itemOrderQcComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemOrderDefectAlert"
        android:layout_toRightOf="@+id/projectItemOrderPhoto"
        android:layout_marginLeft="7dip"
        android:text="OrderQcComments11"
        android:textSize="8sp"
        android:textStyle="bold" />
   
    
     <ImageView
        android:id="@+id/projectItemOrderPhotoRight"
       android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding ="5dp"
        android:layout_alignParentRight="true" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/projectItemOrderPhotoRight"        
        android:background="@color/content_background" />
    
    
   

</RelativeLayout>